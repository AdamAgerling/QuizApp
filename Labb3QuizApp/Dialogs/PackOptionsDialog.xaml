<Window x:Class="Labb3QuizApp.Dialogs.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3QuizApp.Dialogs"
        mc:Ignorable="d"
        Title="Pack Options" Height="200" Width="150" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Margin="10">
        <TextBlock Text="Pack Name:" Margin="1 10 0 2" FontWeight="Bold"/>
        <TextBox Text=""/>
            <TextBlock Text="Difficulty:" FontWeight="Bold"/>
            <ComboBox Text="{Binding QuestionPack.Difficulty}"/>
            <TextBlock Text="Time Limit:" FontWeight="Bold"/>
            <Slider />
        </StackPanel>
    </Grid>
</Window>
